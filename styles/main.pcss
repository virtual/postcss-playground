$primary-color: #8c97ea;
$secondary-color: #999;

html {
    height: 100%;
}

body {
    background: linear-gradient(#0e0d1a, #15132b); 
    height: 100%;
    margin: 0;
    background-repeat: no-repeat;
    background-attachment: fixed;
}

.container {
    padding: 20px;
    max-width: 1440px;
    margin: 0 auto;
}

h1 {
    blur: 12px;
    font-size: 2em;
    color: $primary-color;
}

p {
    color: #fff;
}

